{
  "scripts": {
    "build-css": "npx tailwindcss -i ./css/main.css -o ./dist/main.css",
    "build-ts": "tsc",
    "format": "prettier ./ts --write",
    "serve": "http-server -p 3000",
    "test": "vitest --run",
    "watch-css": "npx tailwindcss -i ./css/main.css -o ./dist/main.css --watch",
    "watch-test": "vitest --watch",
    "watch-ts": "tsc --watch"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.3",
    "tw-colors": "^3.0.3",
    "typescript": "^5.2.2",
    "vitest": "^0.34.4"
  }
}
